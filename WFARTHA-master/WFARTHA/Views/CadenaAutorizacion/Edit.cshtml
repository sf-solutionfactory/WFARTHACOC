                    <div class=" dropdown col s12">
                        @Html.Label("Step fase", htmlAttributes: new { @id = "lbl_usuario" })
                        @Html.EditorFor(model => model.STEP_FASE, new { htmlAttributes = new { @readonly = "readonly", @class = "form-control" } })
