                            <label id="lbl_fechaconta">Agente siguiente</label>
                        </div>
                    </div>
                    <div class=" dropdown col s12">
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.AGENTE_SIG, Model.usersLista, "Seleccione un Usuario", new { @class = "browser-default" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-panel">
        @*<div class="row">*@
        @*<div class="row" style="margin-bottom:0;">
                <div class="input-field col s3 m3 l3">
                    <select id="selecc">
                        <option value="10" selected>10</option>
